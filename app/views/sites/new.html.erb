<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">オリジナルサイト登録</div>
      <div class="panel-body">
        <%= form_for(@site) do |f| %>
          <div class="form-group">
            <%= f.label :site_name, 'サイト名' %>
            <%= f.text_field :site_name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :site_url, 'サイトURL' %>
            <%= f.text_field :site_url, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :site_image, 'サムネイル画像' %>
            <%= f.file_field :site_image, class: 'form-control' %>
          </div>

          <div class="text-right">
            <%= f.submit '登録する', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>